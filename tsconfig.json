{
  "compilerOptions": {    
    "outDir": "./build",
    "inlineSourceMap": false,
    "typeRoots": ["@types"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "esModuleInterop": false,
    "sourceMap": true
  },
    "include": [
      "src"
, "@types"    ],
  "exclude": ["node_modules", "**/*.spec.ts" , "**/*.js.map"]
  }